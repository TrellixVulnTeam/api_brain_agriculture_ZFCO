{
  "compilerOptions": {
   
    "target": "es2021", //ok
    
    "module": "commonjs",   //ok      
    "strict": false,       // ok

    "strictPropertyInitialization": false, //ok

    "esModuleInterop": true, //ok

    // "baseUrl": "./src",
    // "typeRoots": [
    //   "./src/@types"
    // ],
                                
    
    "forceConsistentCasingInFileNames": true,           
    
    
    "resolveJsonModule": true, 
   
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": ["src"]
}


